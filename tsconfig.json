{
  "compilerOptions": {
    /* Base Options: */
    "noErrorTruncation": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,

    "moduleDetection": "force",

    "strictNullChecks": true,

    "forceConsistentCasingInFileNames": true,

    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    /* Strictness */
    "strict": false,
    "noUncheckedIndexedAccess": true,
    "checkJs": false,

    /* Bundled projects */
    "lib": ["dom", "dom.iterable", "ES2022"],
    "noEmit": true,


    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    ".eslintrc.cjs",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
    ".next/types/**/*.ts"
, "src/app/_components/icons/icon.jsx"  ],
  "exclude": ["node_modules"]
}
